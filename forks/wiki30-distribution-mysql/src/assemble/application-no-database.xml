<assembly>
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.xwiki.manager:xwiki-enterprise-manager-web</include>
      </includes>
      <outputDirectory>webapps/xwiki</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/hibernate.cfg.xml</exclude>
          <!-- Exclude default xwiki.cfg that uses domain based wikis. To be replaced with one that uses path based wikis. -->
          <exclude>**/xwiki.cfg</exclude>
          <!-- Exclude forked Wiki3.0 specific components. -->
          <!-- Currently disabling wikimanager fork since it is up to date with the trunk.
          <exclude>**/xwiki-plugin-wiki-manager-*.jar</exclude>
          -->
          <!-- Currently disabling core fork since it is up to date with the trunk.
          <exclude>%regex[.*/xwiki-core-[0-9]+.*jar]</exclude>
          -->
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- ROOT webapp, redirecting to /xwiki/ when no application is specified. -->
    <dependencySet>
      <includes>
        <include>org.xwiki.platform.tools:xwiki-rootwebapp</include>
      </includes>
      <outputDirectory>webapps/root</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- Unpack Jetty files -->
    <dependencySet>
      <includes>
        <include>org.xwiki.platform.tools:xwiki-jetty-resources</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- Add JDBC driver for the database to use. -->
    <dependencySet>
      <includes>
        <include>${xwiki.db.jdbc.groupId}:${xwiki.db.jdbc.artifactId}</include>
      </includes>
      <outputDirectory>webapps/xwiki/WEB-INF/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <!-- Add forked Wiki3.0 specific components. -->
    <!-- Currently disabling core fork since it is up to date with the trunk.
    <dependencySet>
      <includes>
        <include>org.xwiki.contrib.wiki30:wiki30-xwiki-plugin-wiki-manager</include>
      </includes>
      <outputDirectory>webapps/xwiki/WEB-INF/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    -->
    <!-- Currently disabling core fork since it is up to date with the trunk.
    <dependencySet>
      <includes>
        <include>org.xwiki.contrib.wiki30:wiki30-xwiki-core</include>
      </includes>
      <outputDirectory>webapps/xwiki/WEB-INF/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    -->
    <!-- Add Wiki3.0 specific components. -->
    <dependencySet>
      <includes>
        <include>org.xwiki.contrib.wiki30:wiki30-components-workspace-manager</include>
      </includes>
      <outputDirectory>webapps/xwiki/WEB-INF/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>
  <files>
  	<file>
      <source>${basedir}/target/maven-shared-archive-resources/hibernate.cfg.xml</source>
      <outputDirectory>webapps/xwiki/WEB-INF</outputDirectory>
    </file>
    <!-- Replacement xwiki.cfg that is configured to use path based wikis instead of domain based wikis. For easier testing purposes. -->
    <file>
      <source>${basedir}/src/main/resources/xwiki.cfg</source>
      <outputDirectory>webapps/xwiki/WEB-INF</outputDirectory>
    </file>
  </files>
  <fileSets>
    <!-- Add License/Notice files -->
    <fileSet>
      <directory>${basedir}/target/maven-shared-archive-resources/META-INF</directory>
      <outputDirectory>META-INF</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
